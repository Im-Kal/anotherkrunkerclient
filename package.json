{
  "name": "anotherkrunkerclient",
  "productName": "anotherkrunkerclient",
  "version": "0.1.0",
  "description": "Another damn Krunker client",
  "author": "Asger Finding",
  "license": "GPLV3",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asger-finding/anotherkrunkerclient.git"
  },
  "scripts": {
    "start": "yarn del ./dist && yarn build && yarn copy && electron ./dist/main.js",
    "deploy": "yarn del ./dist ./build && yarn build && yarn copy && electron-builder --win && yarn postinstall",

    "build": "tsc",
    "copy": "copyfiles -u 1 -e ./src/**/*.ts ./src/**/* ./dist/",
    "postinstall": "electron-builder install-app-deps",

    "lint": "yarn eslint . --ext .ts,.js",
    "lintcss": "yarn stylelint src/**/*.css"
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true,
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "zip"
      ]
    }
  },
  "dependencies": {
    "axios": "^0.26.1",
    "electron-acrylic-window": "^0.5.11",
    "electron-log": "^4.4.6",
    "electron-prompt": "^1.7.0",
    "electron-store": "^8.0.1",
    "electron-updater": "4.6.5",
    "module-alias": "^2.2.2",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/node": "12.12.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.1",
    "electron": "^9.4.3",
    "electron-builder": "^22.14.13",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-typescript": "^16.1.1",
    "eslint-config-raven": "^1.0.3",
    "eslint-plugin-import": "^2.25.4",
    "stylelint": "^14.5.3",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^25.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
